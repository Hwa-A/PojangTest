<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yuhan.yangpojang" >
    <!-- 인터넷 사용 권한 설정 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".kakaoApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YangPojang"
        tools:ignore="MissingClass"
        tools:targetApi="31" >
        <activity
            android:name=".ReportShop"
            android:exported="true" />
        <!-- 여기에 메타데이터를 작성합니다 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="cd9472b274bfc27dc04e7fdcd8ce8b2f" />
        <meta-data
            android:name="com.kakao.sdk.RedirectUri"
            android:value="https://com.yuhan.yangpojang/oauth" />

        <activity
            android:name=".ShowUserInfo"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".MainActivity" android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Replace "com.yuhan.yangpojang" with your app's package name -->
                <data
                    android:host="com.yuhan.yangpojang"
                    android:path="/oauth"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true"
            tools:ignore="MissingClass" >

